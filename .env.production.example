# VPS Production Configuration
# Copy this file to .env.production and customize

# User Configuration
NEW_USER="prod-admin"
DEFAULT_USER="ubuntu"

# SSH Configuration
SSH_PORT_MIN=50000
SSH_PORT_MAX=59999
# Or set a specific port:
# SSH_PORT=53387

# Fail2Ban Configuration
FAIL2BAN_BANTIME="24h"
FAIL2BAN_FINDTIME="10m"
FAIL2BAN_MAXRETRY=3

# Docker Configuration
DOCKER_LOG_MAX_SIZE="10m"
DOCKER_LOG_MAX_FILE="3"

# Logging
LOG_FILE="/var/log/vps_setup.log"

# Notifications (optional)
# NOTIFICATION_EMAIL="admin@example.com"
# SLACK_WEBHOOK="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# Security
# Enable dry-run mode (test without applying changes)
DRY_RUN=false

# Skip system integrity check (not recommended)
SKIP_INTEGRITY_CHECK=false

# Dokploy installer checksum verification (optional but recommended)
# Get the latest checksum from: https://dokploy.com/install.sh.sha256
# DOKPLOY_INSTALLER_CHECKSUM="abc123..."
